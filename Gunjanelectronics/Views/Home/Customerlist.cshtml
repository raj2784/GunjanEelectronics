@model List<Gunjanelectronics.Models.AddcustomerModel>
@{
    ViewBag.Title = "Customerlist";
}


@section Style

{

    <link href="~/Content/jquery.dataTables.min.css" rel="stylesheet" />
}

@section Scripts

{
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.dataTable.js"></script>
    <script>
        $(document).ready(function () {
            $('#tbl').DataTable();
        });
    </script>
}


<h2>Customer List</h2>

<table border="1" id="tbl" class="display compact" style="width:100%">
    <thead>
        <tr>
            <td>
                <b>Customer Id</b>
            </td>
            <td>
                <b>Name</b>
            </td>
            <td>
                <b>Dob</b>
            </td>
            <td>
                <b>Country</b>
            </td>
            <td>
                <b>State</b>
            </td>
            <td>
                <b>City</b>
            </td>
            <td>
                <b>Address</b>
            </td>
            <td>
                <b>Email</b>
            </td>
            <td>
                <b>Mobile</b>
            </td>
            <td>
                <b>Survey</b>
            </td>
            <td>
                <b>Update</b>
            </td>
            <td>
                <b>Delete</b>
            </td>
        </tr>
    </thead>
    @{
        foreach (var c in Model)
        {
            <tr>
                <td>
                    @c.Customerid
                </td>
                <td>
                    @c.Name
                </td>
                <td>
                    @Html.DisplayFor(modelitem => c.Dob)
                </td>
                <td>
                    @c.countryname
                </td>
                <td>
                    @c.statename
                </td>
                <td>
                    @c.cityname
                </td>
                <td>
                    @c.Address
                </td>
                <td>
                    @c.Email
                </td>
                <td>
                    @c.Mobile
                </td>
                <td>
                    @c.wouldyouliketoparticipateinSurvey
                </td>
                <td>
                    @Html.ActionLink("Edit", "UpdateCustomer", "Home", new { Id = c.id }, new { })
                </td>
                <td>
                    @Html.ActionLink("Delete", "RemoveCustomer", "Home", new { Id = c.id }, new { })
                </td>
            </tr>
        }
    }


</table>

